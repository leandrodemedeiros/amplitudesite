---
import { Picture } from "astro:assets";
import heroImage from "assets/puzzle.png";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={heroImage}
      alt="Astronaut in the air"
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
      id="heroImage"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter place-items-center">
      Design & <br />Automação & </br />Marketing Digital
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      Plural e integrado. Uma assessoria digital para seu próximo estágio. <wbr /> 
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="about"
        style="outline"
        target=""
        class="flex gap-1 items-center justify-center"
        rel="noopener">
        <!-- <Icon class="text-white w-5 h-5" name="bx:bxs-cloud-download" /> -->
        O que fazemos
      </Link>
      <Link
        size="lg"
        rel="noopener"
        href="https://wa.me/5562981890848"
        class="flex gap-1 items-center justify-center"
        target="_blank">
        <!-- <Icon class="text-black w-4 h-4" name="bx:bxl-instagram" /> -->
         Contratar
      </Link>
    </div>
  </div>
</main>


